{
  "name": "og-codex-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "analyze": "cross-env ANALYZE=true next build",
    "build:analyze": "npm run build && npx next-bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html --view",
    "size": "size-limit",
    "perf:check": "node scripts/performance-check.js"
  },
  "dependencies": {
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.2",
    "@size-limit/preset-app": "^11.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.4.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "lighthouse": "^12.0.0",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0"
  },
  "size-limit": [
    {
      "name": "Page bundle (main)",
      "path": ".next/static/chunks/app/page-*.js",
      "limit": "10 KB"
    },
    {
      "name": "Shared chunks",
      "path": ".next/static/chunks/!(app)*.js",
      "limit": "100 KB"
    }
  ]
}
